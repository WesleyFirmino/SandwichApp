@model SandwichListViewModel

@{
    ViewData["Title"] = "List";
}

<div>
    <h1>@Model.CurrentCategory</h1>
</div>

<div class="container">
    <div class="row">
        @foreach (var sandwich in Model.Sandwiches)
        {
            <div class="col-sm-4 col-md-4 col-lg-4">
                <p><img class="img-fluid" src="@sandwich.ImageURL"></p>
                <h3>Pre√ßo: @sandwich.Price.ToString("c")</h3>
                <h4>Sandwich: @sandwich.Name</h4>                
                <p>@sandwich.ShortDescription</p>
            </div>
        }
    </div>
</div>